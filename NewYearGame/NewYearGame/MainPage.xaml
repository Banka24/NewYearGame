<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewYearGame.MainPage">

    <StackLayout>
        <Grid>
            <!--<Grid.RowDefinitions>
                <RowDefinition Height="750"/>
            </Grid.RowDefinitions>-->
            <Frame BackgroundColor="LightBlue" Padding="36">
                <StackLayout>
                    <Button x:Name="StartGameButton" Text="Начать игру" HorizontalOptions="Center" VerticalOptions="Center" Clicked="StartGameButton_Clicked" Margin="0, 50"/>
                    <Button x:Name="InfoGameButton" Text="Об игре" HorizontalOptions="Center" VerticalOptions="Center" Clicked="InfoGameButton_Clicked" Margin="0, 100"/>
                    <Button x:Name="EndGameButton" Text="Выйти" HorizontalOptions="Center" VerticalOptions="Center" Clicked="EndGameButton_Clicked" Margin="0, 200, 0, 0"/>
                </StackLayout>
            </Frame>
        </Grid>
    </StackLayout>

</ContentPage>
